<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_garantie" model="ir.ui.view">
        <field name="name">product.template.form.inherit.garantie</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_garanties" type="object" class="oe_stat_button" icon="fa-shield">
                    <field name="garantie_count" widget="statinfo" string="Garanties"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
