<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_garantie" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.garantie</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_garanties" type="object" class="oe_stat_button" icon="fa-shield">
                    <field name="garantie_count" widget="statinfo" string="Garanties"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
